<Application x:Class="ThresholdDetection.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ThresholdDetection.WPF.Converters"
             StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        <conv:HeatColorConverter x:Key="HeatColorConverter"/>
        <conv:ScaleConverter x:Key="ScaleConverter" CellSize="20"/>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application>

