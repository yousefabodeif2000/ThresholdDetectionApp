<Window x:Class="ThresholdDetection.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ThresholdDetection.WPF.ViewModels"
        mc:Ignorable="d"
        Title="Threshold Detection Visualizer"
        Width="1000" Height="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#222">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Main Grid (overlay layers) -->
    <Grid>
        <!-- ===== Visualization Area (Base Layer) ===== -->
        <Grid Background="#222"
              MouseWheel="OnMouseWheel"
              MouseLeftButtonDown="OnMouseDown"
              MouseLeftButtonUp="OnMouseUp"
              MouseMove="OnMouseMove">

            <!-- Zoom/Pan transforms -->
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                    <TranslateTransform X="{Binding PanX}" Y="{Binding PanY}"/>
                </TransformGroup>
            </Grid.RenderTransform>

            <Grid x:Name="VisualizationGrid"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ClipToBounds="True"
                  Visibility="{Binding IsDataLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">

                <!-- Viewbox centers and scales content -->
                <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Canvas Width="{Binding HeatmapImage.PixelWidth}"
                            Height="{Binding HeatmapImage.PixelHeight}">

                        <!-- Base heatmap image -->
                        <Image Source="{Binding HeatmapImage}"
                               Canvas.Left="0" Canvas.Top="0"
                               Width="{Binding HeatmapImage.PixelWidth}"
                               Height="{Binding HeatmapImage.PixelHeight}"
                               Stretch="None"/> 

                        <!-- Boxes overlay -->
                        <ItemsControl ItemsSource="{Binding Boxes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding HeatmapImage.PixelWidth}" 
                                Height="{Binding HeatmapImage.PixelHeight}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemContainerStyle>
                                <Style>
                                    <Setter Property="Canvas.Left" Value="{Binding XStart}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding YStart}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Rectangle Stroke="Lime"
                                   StrokeThickness="0.2"
                                   Fill="#3300FF00"
                                   Width="{Binding XLength}"
                                   Height="{Binding YLength}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Viewbox>

            </Grid>




            <!-- Initial Description -->
            <Border Visibility="{Binding IsDataLoaded, 
                             Converter={StaticResource BooleanToVisibilityConverter}, 
                             ConverterParameter=invert}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
                    <TextBlock Text="Threshold Detection Visualizer"
                               FontSize="26"
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Load a CSV file to visualize a heatmap of 2D data and detect regions above a threshold."
                               FontSize="16"
                               Foreground="LightGray"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Loading Overlay -->
            <Border Background="#AA000000"
                    Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Width="200" Height="15" IsIndeterminate="True"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="White"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ===== Top Control Bar (Overlays Visualization) ===== -->
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="10"
                    Background="#AA222222"
                    Panel.ZIndex="10">

            <!-- Load CSV -->
            <Button Content="Load CSV"
                    Command="{Binding LoadCsvCommand}"
                    Width="100"
                    Margin="0,0,10,0"/>

            <!-- Threshold Input -->
            <TextBlock Text="Threshold:"
                       VerticalAlignment="Center"
                       Foreground="White"/>
            <TextBox Text="{Binding Threshold, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>

            <!-- Detect -->
            <Button Content="Detect Regions"
                    Command="{Binding DetectCommand}"
                    Width="120"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <!-- Zoom Controls -->
            <Button Content="+"
                    Command="{Binding ZoomInCommand}"
                    Width="40"
                    Margin="0,0,5,0"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <Button Content="−"
                    Command="{Binding ZoomOutCommand}"
                    Width="40"
                    Margin="0,0,5,0"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <Button Content="Reset"
                    Command="{Binding ResetViewCommand}"
                    Width="80"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <!-- Status -->
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="LightGray"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
