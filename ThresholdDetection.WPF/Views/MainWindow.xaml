<Window x:Class="ThresholdDetection.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ThresholdDetection.WPF.ViewModels"
        xmlns:conv="clr-namespace:ThresholdDetection.WPF.Converters"
        mc:Ignorable="d"
        Title="Threshold Detection Visualizer"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:HeatColorConverter x:Key="HeatColorConverter"/>
        <conv:ScaleConverter x:Key="ScaleConverter" CellSize="20"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Controls -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Threshold:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Width="80"
                     Text="{Binding Threshold, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>
            <Button Content="Detect Regions"
                    Command="{Binding DetectCommand}"
                    Width="150"/>
            <Button Content="Load CSV"
                    Command="{Binding LoadCsvCommand}"
                    Margin="10,0,0,0"
                    Width="100"/>
        </StackPanel>

        <!-- Visualization -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Matrix heatmap -->
                <ItemsControl ItemsSource="{Binding MatrixRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="20" Height="20"
                                                BorderBrush="#444" BorderThickness="0.5"
                                                Background="{Binding Converter={StaticResource HeatColorConverter}}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Boxes overlay -->
                <ItemsControl ItemsSource="{Binding Boxes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left"
                                    Value="{Binding XStart, Converter={StaticResource ScaleConverter}}"/>
                            <Setter Property="Canvas.Top"
                                    Value="{Binding YStart, Converter={StaticResource ScaleConverter}}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Stroke="Lime"
                                       StrokeThickness="2"
                                       Fill="#40FF0000"
                                       Width="{Binding XLength, Converter={StaticResource ScaleConverter}}"
                                       Height="{Binding YLength, Converter={StaticResource ScaleConverter}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
