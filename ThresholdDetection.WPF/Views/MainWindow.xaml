<Window x:Class="ThresholdDetection.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ThresholdDetection.WPF.ViewModels"
        xmlns:conv="clr-namespace:ThresholdDetection.WPF.Converters"
        mc:Ignorable="d"
        Title="Threshold Detection Visualizer"
        Height="700" Width="900"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:HeatColorConverter x:Key="HeatColorConverter"/>
        <conv:ScaleConverter x:Key="ScaleConverter" CellSize="20"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Top control bar -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="10"
                    VerticalAlignment="Center">

            <TextBlock Text="Threshold:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>

            <TextBox Width="80"
                     Text="{Binding Threshold, UpdateSourceTrigger=PropertyChanged, StringFormat=F4}"
                     Margin="0,0,10,0"
                     PreviewTextInput="OnPreviewTextInput"
                     PreviewKeyDown="OnPreviewKeyDown"/>


            <Button Content="Detect Regions"
                    Command="{Binding DetectCommand}"
                    Width="150"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <Button Content="Load CSV"
                    Command="{Binding LoadCsvCommand}"
                    Width="100"
                    Margin="0,0,10,0"/>

            <Button Content="+"
                    Command="{Binding ZoomInCommand}"
                    Width="90"
                    Margin="0,0,1,0"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <Button Content="-"
                    Command="{Binding ZoomOutCommand}"
                    Width="90"
                    Margin="0,0,1,0"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <!-- Status message -->
            <TextBlock Text="{Binding StatusMessage}"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       Foreground="Gray"
                       FontStyle="Italic"/>
            
            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="{Binding LoadProgress}"
                         Height="8"
                         Width="200"
                         VerticalAlignment="Center"
                         Margin="20,0,0,0"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        </StackPanel>

        <!-- Visualization area -->
        <Grid>
            <!-- Description before CSV load -->
            <Border Visibility="{Binding IsDataLoaded, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
                    Background="#111"
                    CornerRadius="8"
                    Padding="20"
                    Margin="40">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Threshold Detection Visualizer"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Load a CSV file to visualize threshold-based region detection."
                               Foreground="#ccc"
                               TextAlignment="Center"
                               Width="400"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Visualization Canvas with named transforms -->
            <Canvas x:Name="VisualizationCanvas"
        RenderTransformOrigin="0.0,0.0"
        Background="Transparent"
        Focusable="True">

                <Canvas.RenderTransform>
                    <TransformGroup>
                        <!-- Scale transform used for zooming -->
                        <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1"/>
                        <!-- Translate transform used for panning -->
                        <TranslateTransform x:Name="PanTransform" X="0" Y="0"/>
                    </TransformGroup>
                </Canvas.RenderTransform>

                <!-- Heatmap: rows of small ItemsControls (same as before) -->
                <ItemsControl ItemsSource="{Binding MatrixRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="20" Height="20"
                                    BorderBrush="#444" BorderThickness="0.5"
                                    Background="{Binding Converter={StaticResource HeatColorConverter}}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Boxes overlay -->
                <ItemsControl ItemsSource="{Binding Boxes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left"
                        Value="{Binding XStart, Converter={StaticResource ScaleConverter}}"/>
                            <Setter Property="Canvas.Top"
                        Value="{Binding YStart, Converter={StaticResource ScaleConverter}}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Stroke="Lime"
                           StrokeThickness="2"
                           Fill="#40FF0000"
                           Width="{Binding XLength, Converter={StaticResource ScaleConverter}}"
                           Height="{Binding YLength, Converter={StaticResource ScaleConverter}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

        </Grid>
    </DockPanel>
</Window>